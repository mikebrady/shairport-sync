name: Build and push Docker images...

on:
  workflow_dispatch:
  push:
    branches:
      - development
      - master
    tags:
      - '[0-9]+'
      - '[0-9]+\.[0-9]+'
      - '[0-9]+\.[0-9]+\.[0-9]+'
  schedule:
    - cron: '0 0 * * *'  # daily at midnight UTC

env:
  DOCKER_PLATFORMS: linux/386,linux/amd64,linux/arm/v6,linux/arm/v7,linux/arm64
  NQPTP_BRANCH: main
  LATEST_TAG: false
  DOCKER_IMAGE_NAME: ${{ format('{0}/{1}', vars.DOCKER_REGISTRY_USER, vars.DOCKER_REPO_NAME) }}
  REGISTRY: ghcr.io  # example for GitHub Container Registry, adjust if needed

jobs:
  main:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v5.0.0
        with:
          fetch-depth: 0

      - name: Set SHAIRPORT_SYNC_BRANCH env.
        run: |
          raw=$(git branch -r --contains ${{ github.ref }})
          branch=${raw##*/}
          echo "SHAIRPORT_SYNC_BRANCH=${branch}" >> $GITHUB_ENV

      - name: Set tag env
        run: echo "GIT_TAG=${GITHUB_REF#refs/*/}" >> $GITHUB_ENV

      - name: Is branch "development"?
        if: ${{ env.SHAIRPORT_SYNC_BRANCH == 'development' }}
        run: |
          echo "NQPTP_BRANCH=development" >> $GITHUB_ENV

      - name: Is branch "master"?
        if: ${{ env.SHAIRPORT_SYNC_BRANCH == 'master' }}
        run: |
          echo "NQPTP_BRANCH=main" >> $GITHUB_ENV
      
      - name: Set up QEMU
        uses: docker/setup-qemu-action@v3.6.0

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3.11.1

      - name: Login to Docker Registry
        uses: docker/login-action@v3.5.0
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Print used image name and tag
        run: |
          echo "DOCKER_IMAGE_NAME: ${{ env.DOCKER_IMAGE_NAME }}"
          echo "Final tag: ${{ env.DOCKER_IMAGE_NAME }}:${{ env.GIT_TAG }}-${branch}"
          
      - name: Build and push (classic)
        uses: docker/build-push-action@v6.18.0
        with:
          context: ./
          file: ./docker/classic/Dockerfile
          platforms: ${{ env.DOCKER_PLATFORMS }}
          push: true
          tags: |
            ${{ env.DOCKER_IMAGE_NAME }}:${{ env.GIT_TAG }}-
            ${{ env.LATEST_TAG == 'true' && format('{0}:classic', env.DOCKER_IMAGE_NAME) || '' }}
          build-args: |
            SHAIRPORT_SYNC_BRANCH=${{ env.SHAIRPORT_SYNC_BRANCH }}
     
      - name: Build and Push AirPlay 2 Version
        uses: docker/build-push-action@v6.18.0
        with:
          context: ./
          file: ./docker/Dockerfile
          platforms: ${{ env.DOCKER_PLATFORMS }}
          push: true
          tags: |
            ${{ env.DOCKER_IMAGE_NAME }}:${{ env.GIT_TAG }}
            ${{ env.LATEST_TAG == 'true' && format('{0}:latest', env.DOCKER_IMAGE_NAME) || '' }}
          build-args: |
            SHAIRPORT_SYNC_BRANCH=${{ env.SHAIRPORT_SYNC_BRANCH }}
            NQPTP_BRANCH=${{ env.NQPTP_BRANCH }}

  sync-fork:
    runs-on: ubuntu-latest
    if: github.event_name == 'schedule' || github.event_name == 'workflow_dispatch'
    steps:
      - name: Checkout fork repository
        uses: actions/checkout@v5
        with:
          ref: main  # your fork's main branch

      - name: Sync upstream changes
        uses: tgymnich/fork-sync@v2.0
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          owner: upstream-owner   # Replace with the upstream repo owner
          base: main              # Branch in your fork to update
          head: main              # Branch in upstream repo to sync from
            
      - name: Checkout development branch
        run: git checkout development

      - name: Sync upstream development branch
        uses: tgymnich/fork-sync@v2.0
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          owner: upstream-owner
          base: development       # Branch in your fork to update
        head: development       # Branch in upstream repo to sync fro
